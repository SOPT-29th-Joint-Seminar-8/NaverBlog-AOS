<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_comment_profile"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="23dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_color_tag" />

    <TextView
        android:id="@+id/textview_comment_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/imageview_comment_profile"
        app:layout_constraintStart_toEndOf="@id/imageview_comment_profile"
        app:layout_constraintTop_toTopOf="@id/imageview_comment_profile"
        tools:text="@string/comment_username" />

    <ImageView
        android:id="@+id/imageview_comment_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/btn_owner"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/textview_comment_username"
        app:layout_constraintStart_toEndOf="@id/textview_comment_username"
        app:layout_constraintTop_toTopOf="@id/textview_comment_username" />

    <TextView
        android:id="@+id/textview_comment_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/constraintlayout_comment_heart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_comment_profile"
        tools:text="@string/item_feed_text" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_comment_heart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@id/textview_comment_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/textview_comment_text"
        app:layout_constraintTop_toTopOf="@id/textview_comment_text">

        <TextView
            android:id="@+id/textview_comment_heart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_barun_gothic"
            android:textColor="@color/sub_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imageview_comment_heart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/feed_visitor_count" />

        <ImageView
            android:id="@+id/imageview_comment_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_comment_heart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textview_comment_heart_count"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textview_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textColor="@color/comment_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_comment_text"
        tools:text="@string/comment_date" />

    <TextView
        android:id="@+id/textview_comment_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/nanum_barun_gothic"
        android:text="@string/comment_feedback"
        android:textColor="@color/comment_gray"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/textview_comment_date"
        app:layout_constraintStart_toEndOf="@id/textview_comment_date"
        app:layout_constraintTop_toTopOf="@id/textview_comment_date" />

    <LinearLayout
        android:id="@+id/linearlayout_comment_feedback"
        android:layout_width="29dp"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="19dp"
        android:background="@color/comment_gray"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_comment_date" />

    <TextView
        android:id="@+id/textview_comment_feedback_visibility"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:fontFamily="@font/nanum_barun_gothic"
        android:text="@string/comment_feedback_visibility"
        android:textColor="@color/comment_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/linearlayout_comment_feedback"
        app:layout_constraintStart_toEndOf="@id/linearlayout_comment_feedback"
        app:layout_constraintTop_toTopOf="@id/linearlayout_comment_feedback" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_comment_feedback"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="54dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textview_comment_feedback_visibility"
        tools:itemCount="3"
        tools:listitem="@layout/item_comment_feedback" />

    <LinearLayout
        android:id="@+id/linearlayout_comment_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="22dp"
        android:background="@color/border_comment_gray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recyclerview_comment_feedback" />

</androidx.constraintlayout.widget.ConstraintLayout>
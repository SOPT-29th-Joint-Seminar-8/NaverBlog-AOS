<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.main.feed.FeedFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedscrollview_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout_feed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_feed_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/constraintlayout_feed_vacant"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imageview_feed_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_main"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageview_feed_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:layout_marginEnd="21dp"
                    android:src="@drawable/ic_search"
                    app:layout_constraintEnd_toStartOf="@id/imageview_feed_menu"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageview_feed_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="65dp"
                    android:layout_marginEnd="13dp"
                    android:src="@drawable/ic_menu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textview_feed_today_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:text="@string/feed_today_visitor"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toTopOf="@id/textview_feed_blog_name"
                    app:layout_constraintStart_toStartOf="@id/textview_feed_blog_name" />

                <TextView
                    android:id="@+id/textview_feed_today_visitor_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:text="@string/feed_visitor_count"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/textview_feed_today_visitor"
                    app:layout_constraintStart_toEndOf="@id/textview_feed_today_visitor"
                    app:layout_constraintTop_toTopOf="@id/textview_feed_today_visitor" />

                <ImageView
                    android:id="@+id/imageview_feed_separator_visitor"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/circle_full_white"
                    app:layout_constraintBottom_toBottomOf="@id/textview_feed_today_visitor_count"
                    app:layout_constraintStart_toEndOf="@id/textview_feed_today_visitor_count"
                    app:layout_constraintTop_toTopOf="@id/textview_feed_today_visitor_count" />

                <TextView
                    android:id="@+id/textview_feed_total_visitor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:text="@string/feed_total_visitor"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/textview_feed_today_visitor_count"
                    app:layout_constraintStart_toEndOf="@id/imageview_feed_separator_visitor"
                    app:layout_constraintTop_toTopOf="@id/textview_feed_today_visitor_count" />

                <TextView
                    android:id="@+id/textview_feed_total_visitor_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:text="@string/feed_visitor_count"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/textview_feed_total_visitor"
                    app:layout_constraintStart_toEndOf="@id/textview_feed_total_visitor"
                    app:layout_constraintTop_toTopOf="@id/textview_feed_total_visitor" />

                <TextView
                    android:id="@+id/textview_feed_blog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="41dp"
                    android:fontFamily="@font/nanum_barun_gothic_bold"
                    android:text="@string/feed_blog_name"
                    android:textColor="@color/white"
                    android:textSize="26sp"
                    app:layout_constraintBottom_toTopOf="@id/imageview_feed_profile"
                    app:layout_constraintStart_toStartOf="@id/imageview_feed_profile" />

                <ImageView
                    android:id="@+id/imageview_feed_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="32dp"
                    android:src="@drawable/info_photo"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textview_feed_owner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nanum_barun_gothic_bold"
                    android:text="@string/feed_owner"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/imageview_feed_profile"
                    app:layout_constraintTop_toTopOf="@id/imageview_feed_profile" />

                <ImageView
                    android:id="@+id/imageview_feed_mutual_neighbor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_status"
                    app:layout_constraintBottom_toBottomOf="@id/textview_feed_owner"
                    app:layout_constraintStart_toEndOf="@id/textview_feed_owner"
                    app:layout_constraintTop_toTopOf="@id/textview_feed_owner" />

                <TextView
                    android:id="@+id/textview_feed_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:text="@string/feed_category"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/imageview_feed_profile"
                    app:layout_constraintEnd_toStartOf="@id/imageview_feed_separator"
                    app:layout_constraintStart_toStartOf="@id/textview_feed_owner" />

                <ImageView
                    android:id="@+id/imageview_feed_separator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/circle_full_white"
                    app:layout_constraintBottom_toBottomOf="@id/textview_feed_category"
                    app:layout_constraintEnd_toStartOf="@id/textview_feed_neighbor"
                    app:layout_constraintStart_toEndOf="@id/textview_feed_category"
                    app:layout_constraintTop_toTopOf="@id/textview_feed_category" />

                <TextView
                    android:id="@+id/textview_feed_neighbor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/nanum_barun_gothic"
                    android:text="@string/feed_neighbor"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    app:layout_constraintBottom_toBottomOf="@id/textview_feed_category"
                    app:layout_constraintStart_toEndOf="@id/imageview_feed_separator"
                    app:layout_constraintTop_toTopOf="@id/textview_feed_category" />

                <ImageView
                    android:id="@+id/imageview_feed_menu_sub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="42dp"
                    android:src="@drawable/ic_menu_sub"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_feed_vacant"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:background="@color/vacant_gray"
                app:layout_constraintBottom_toTopOf="@id/constraintlayout_feed_board"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_feed_main" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintlayout_feed_board"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintlayout_feed_vacant">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintlayout_feed_board_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="19dp"
                    app:layout_constraintBottom_toTopOf="@id/recyclerview_feed_board"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/textview_feed_board_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanum_barun_gothic_bold"
                        android:text="@string/feed_board_type"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageview_feed_board_dropdown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"
                        android:layout_marginBottom="3dp"
                        android:src="@drawable/ic_dropdown"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/textview_feed_board_type"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageview_feed_board_type1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/btn_grid_gallery"
                        app:layout_constraintBottom_toBottomOf="@id/imageview_feed_board_type2"
                        app:layout_constraintEnd_toStartOf="@id/imageview_feed_board_type2"
                        app:layout_constraintTop_toTopOf="@id/imageview_feed_board_type2" />

                    <ImageView
                        android:id="@+id/imageview_feed_board_type2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:src="@drawable/btn_grid_list_1"
                        app:layout_constraintBottom_toBottomOf="@id/imageview_feed_board_type3"
                        app:layout_constraintEnd_toStartOf="@id/imageview_feed_board_type3"
                        app:layout_constraintTop_toTopOf="@id/imageview_feed_board_type3" />

                    <ImageView
                        android:id="@+id/imageview_feed_board_type3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:src="@drawable/btn_grid_list_2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_feed_board"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_feed_board"
                    tools:itemCount="4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/constraintlayout_feed_board_top" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
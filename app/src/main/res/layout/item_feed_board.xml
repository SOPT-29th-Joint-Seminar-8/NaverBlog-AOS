<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingTop="19dp">

    <ImageView
        android:id="@+id/imageview_feed_board_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/img_post" />

    <TextView
        android:id="@+id/textview_feed_board_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:fontFamily="@font/nanum_barun_gothic"
        android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/imageview_feed_board_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/item_feed_title" />

    <TextView
        android:id="@+id/textview_feed_board_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:ellipsize="end"
        android:fontFamily="@font/nanum_barun_gothic"
        android:maxLines="2"
        android:textColor="@color/main_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/textview_feed_board_title"
        app:layout_constraintTop_toBottomOf="@id/textview_feed_board_title"
        tools:text="@string/item_feed_text" />

    <TextView
        android:id="@+id/textview_feed_board_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textColor="@color/sub_gray"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@id/imageview_feed_board_thumbnail"
        app:layout_constraintStart_toStartOf="@id/textview_feed_board_title"
        tools:text="@string/item_feed_date" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_feed_heart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageview_feed_board_thumbnail">

        <ImageView
            android:id="@+id/imageview_feed_board_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_feed_heart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textview_feed_board_heart_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_feed_board_heart_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_barun_gothic"
            android:textColor="@color/sub_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_feed_board_heart"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/feed_visitor_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout_feed_comment"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        app:layout_constraintStart_toEndOf="@id/constraintlayout_feed_heart"
        app:layout_constraintTop_toTopOf="@id/constraintlayout_feed_heart">

        <ImageView
            android:id="@+id/imageview_feed_board_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_comment"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/textview_feed_board_comment_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_feed_board_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_barun_gothic"
            android:textColor="@color/sub_gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageview_feed_board_comment"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/feed_visitor_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageview_feed_board_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/boarder_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>